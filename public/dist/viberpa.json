  "swagger": "2.0",
  "info": {
    "description": "\n# Introduction\n\nWelcome to the UnificationEngine® Viber API! You can use our API to access UnificationEngine® API endpoints, which can communicate with Viber. \n",
    "version": "1.0.0",
    "title": "viber"
  },
